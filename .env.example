# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Roles - Lista de emails separados por comas
COORDINATOR_EMAILS=coordinador@example.com,admin@example.com
PROFESSOR_EMAILS=profesor1@example.com,profesor2@example.com
STUDENT_EMAILS=estudiante1@example.com,estudiante2@example.com

# Resend (para emails automáticos)
RESEND_API_KEY=your_resend_api_key

# Twilio (para WhatsApp - opcional, requiere cuenta paga)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Notificaciones automáticas
CRON_SECRET=your_cron_secret_for_automatic_notifications
NEXT_PUBLIC_CRON_SECRET=your_cron_secret_for_automatic_notifications

# Google Service Account (para notificaciones automáticas sin usuario)
GOOGLE_SERVICE_ACCOUNT_TOKEN=your_service_account_token
